{% extends 'main.twig' %}

{% block content %}
    {% import 'macro.twig' as VH %}
    <h1>Register</h1>
    <p>Access to the site's content is available to registered users at a cost of $10.00 (US) per year. Use the form
        below to begin the registration process. <strong>Note: All fields are required.</strong> After completing this
        form, you'll be presented with the opportunity to securely pay for your yearly subscription via
        <a href="http://www.paypal.com">PayPal</a>.</p>
    <form action="http://{{ BASE_URL }}?cmd=register" method="post" accept-charset="utf-8">
        {{ VH.create_form_input('first_name','text', post, 'First Name', reg_errors) }}
        {{ VH.create_form_input('last_name', 'text', post, 'Last Name', reg_errors) }}
        {{ VH.create_form_input('username', 'text', post, 'Desired Username', reg_errors) }}
        <span class="help-block">Only letters and numbers are allowed.</span>
        {{ VH.create_form_input('email', 'email', post, 'Email Address', reg_errors) }}
        {{ VH.create_form_input('pass1', 'password', post, 'Password', reg_errors) }}
        <span class="help-block">Must be at least 6 characters long, with at least one lowercase letter,
            one uppercase letter, and one number.
        </span>
        {{ VH.create_form_input('pass2', 'password', post, 'Confirm Password', reg_errors) }}
        <input type="submit" name="submit_button" value="Next &rarr;" id="submit_button" class="btn btn-default" />
    </form>

{% endblock %}